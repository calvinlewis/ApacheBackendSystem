<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>

    <class name="com.social.models.User" table="USER" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
            
        <id name="userPrimaryKey" type="string" unsaved-value="null" >
            <column name="USER_PRIMARY_KEY" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>

        <property name="id">
            <column name="ID" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="password">
            <column name="PASSWORD" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="firstName">
            <column name="FIRST_NAME" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="lastName">
            <column name="LAST_NAME" sql-type="tinytext" not-null="true"/>
        </property>

        <property name="position">
            <column name="POSITION" sql-type="tinytext" not-null="true"/>
        </property>

        <property name="gender">
            <column name="GENDER" sql-type="tinytext" not-null="true"/>
        </property>
                                
        <property name="token">
        	<column name="TOKEN" sql-type="tinytext" not-null="true"/>
        </property>

    </class>

</hibernate-mapping>